                <TextBlock Foreground="White" FontSize="15" x:Name="titulo2" Margin="0,0,40,0"/>
                <TextBlock Foreground="White" FontSize="15" x:Name="autor2" Margin="0,0,40,0"/>
            </StackPanel>-->
            <!-- Botões de controle de reprodução -->
           <!-- <Button Content="Play" CommandParameter="{Binding}" Command="{Binding Play}" 
                Width="50" Height="25" RenderTransformOrigin="0.454,1.689" Margin="5,0,0,0" />
            <Button Content="Stop" CommandParameter="{Binding}" Command="{Binding Stop}" 
                Width="50" Height="25" Margin="5,0,0,0" />
            <Button Content="Pause" CommandParameter="{Binding}" Command="{Binding Pause}" 
                Width="50" Height="25" Margin="5,0,0,0"/>
        </StackPanel>-->

        <!-- Seção superior -->
        <!--StackPanel Abaixo Esquerda-->
        <StackPanel Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"  VerticalAlignment="Center" Orientation="Horizontal"
                    Margin="0,0,0,0">
            <Image HorizontalAlignment="Left" Margin="0,0,10,0"  Height="50" Width="50"
            Source="assets\img\icon.png"/>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                <TextBlock Width="150" VerticalAlignment="Center" Foreground="White" FontSize="15" Text="{Binding SelectedMedia.Name}" />
                <TextBlock VerticalAlignment="Center" Foreground="#7e7f7f" FontSize="15" Text="{Binding SelectedMedia.Author}" />

            </StackPanel>
        </StackPanel>
    
        <!--StackPanel Abaixo Direita-->
        <StackPanel Grid.Row="1" Grid.Column="1"  Orientation="Horizontal" 
                VerticalAlignment="Center" HorizontalAlignment="Center" >
        
           
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Button Template="{DynamicResource MouseOverTemplate}" x:Name="PreviousButton" Width="40" Height="40" Foreground="Transparent" Background="Transparent" Command="{Binding Previous}" CommandParameter="{Binding Play}" Style="{StaticResource CircularButton}" >
                    <Polygon Margin="11.25,0,0,0" Points="0,0 -12,7.5 -12,0 -13.5,0 -13.5,15 -12,15 -12,7.5 0,15"  Fill="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <ToggleButton Margin="10,0,0,0" Template="{StaticResource MouseOverTemplate}" Height="50"
                              Width="50" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                              Background="Transparent" Style="{DynamicResource PlayPauseButton}" IsChecked="{Binding IsPlaying, Mode=TwoWay}">
                    

                </ToggleButton>
                <Button x:Name="StopButton"  Template="{DynamicResource MouseOverTemplate}" Margin="10,0,0,0"  
                        Width="40" Height="40" Foreground="Transparent" Background="Transparent" 
                        CommandParameter="{Binding}" Command="{Binding Stop}" Style="{StaticResource CircularButton}" >
                    <Polygon Margin="0,0,0,0" Points="0,0 15,0 15,15 0,15"  Fill="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
                <Button x:Name="NextButton" Template="{DynamicResource MouseOverTemplate}" Margin="10,0,0,0"   Width="40" Height="40" Foreground="Transparent" Background="Transparent" Style="{StaticResource CircularButton}"
                        Command="{Binding Previous}" CommandParameter="{Binding Play}" >
                    <Polygon Margin="2,0,0,0" Points="0,0 12,7.5 12,0 13.5,0 13.5,15 12,15 12,7.5 0,15"  Fill="White" />

                </Button>
                <Button x:Name="VolumeButton" Margin="12,0,0,0" Background="Transparent" Foreground="Transparent" BorderBrush="Transparent" Height="14" Width="17" VerticalAlignment="Center" >
                    <Grid>
                        <Polygon VerticalAlignment="Center" Points="0,0 -8,5 0,10" Fill="White" />
                        <Path VerticalAlignment="Center" Margin="-2,0,0,0" Stroke="White" Fill="Transparent" Data="M5,0 A5,5,0,0,1,5,5"/>
                        <Path VerticalAlignment="Center" Margin="-2,0,0,0" Stroke="White" Fill="Transparent" Data="M7.5,0 A7.5,7.5,0,0,1,7.5,7.5"/>
                        <Path VerticalAlignment="Center" Margin="-2,0,0,0" Stroke="White" Fill="Transparent" Data="M10,0 A10,10,0,0,1,10,10"/>
                    </Grid>
                </Button>
                <Slider x:Name="Volume" Width="200" Height="18"
                    Maximum="100" Minimum="0" Orientation="Horizontal"  Style="{DynamicResource VolumeSlider}"/>
            </StackPanel>
        </StackPanel>
        
        <!--StackPanel Acima Esquerda-->
        <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Top">
            <!-- Logo e título do aplicativo -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <Image Margin="20,20,20,20" Height="80" Width="80"
                Source="https://github.com/luminarts/MediaPlayerINF0996/blob/main/assets/img/icon.png?raw=true"/>
                <TextBlock Foreground="White" VerticalAlignment="Center" FontSize="35" Text="Songfy"/>
            </StackPanel>
            <TextBlock Foreground="White" FontSize="25" FontWeight="Bold" FontFamily="TimesNewRoman"
                Name="Playlist"
                Text="LANÇAMENTOS" HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto" Background="#262525" Foreground="#262525">
                <Grid x:Name="grid" MinWidth="200" 
                    Width="{Binding Path=ActualWidth, 
                            RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollContentPresenter}}}" Background="#262525">
                    <DataGrid ItemsSource="{Binding Medias}"
                        AutoGenerateColumns="False"
                        IsReadOnly="True"
                        SelectedItem="{Binding SelectedMedia}"
                        Margin="10,0,10,0"
                        Style="{StaticResource MusicList}">                   
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="1*" />
                            <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="1*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </ScrollViewer>
        </StackPanel>


            
        <!--<Button Margin="20,10,20,10" Height="40" Name="Video11" Foreground="White"
                FontWeight="Bold" Background="#323232" CommandParameter="{Binding}" Command="{Binding Video1}"
                >Video 1</Button>
            <Button Margin="20,10,20,10" Height="40" Name="Video21" Foreground="White"
                FontWeight="Bold" Background="#323232" CommandParameter="{Binding}" Command="{Binding Video2}"
                >Video 2</Button>
            <Button Margin="20,10,20,10" Height="40" Name="Video31" Foreground="White"
